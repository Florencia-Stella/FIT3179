{
   "$schema":"https://vega.github.io/schema/vega/v5.json",
   "width":450,
   "height":450,
   "padding":75,
   "autosize":{
      "type":"none",
      "contains":"padding"
   },
   "signals":[
      {
         "name":"radius",
         "update":"width / 2"
      },
      {
         "name":"Province",
         "value":"Average",
         "bind":{
            "input":"select",
            "options":[
               "Average",
               "Aceh",
               "Bali",
               "Bangka Belitung",
               "Banten",
               "Bengkulu",
               "Central Java",
               "Central Kalimantan",
               "Central Sulawesi",
               "East Java",
               "East Kalimantan",
               "East Nusa Tenggara",
               "Gorontalo",
               "Jambi",
               "Jakarta",
               "Lampung",
               "Maluku",
               "North Kalimantan",
               "North Maluku",
               "North Sulawesi",
               "North Sumatra",
               "Papua",
               "Riau",
               "Southeast Sulawesi",
               "South Kalimantan",
               "South Sulawesi",
               "South Sumatra",
               "West Java",
               "West Kalimantan",
               "West Nusa Tenggara",
               "West Papua",
               "West Sulawesi",
               "West Sumatra",
               "Yogyakarta"
            ]
         }
      }
   ],
   "data":[
      {
         "url":"https://raw.githubusercontent.com/Florencia-Stella/FIT3179/main/data/AQI_data.csv",
         "name":"data",
         "format":{
            "type":"csv"
         },
         "transform":[
            {
               "type":"filter",
               "expr":"Province === null || datum.Province === Province || datum.Province === 'Average'"
            }
         ]
      }
   ],
   "scales":[
      {
         "name":"angular",
         "type":"point",
         "range":{
            "signal":"[-PI, PI]"
         },
         "padding":0.5,
         "domain":{
            "data":"data",
            "field":"Index"
         }
      },
      {
         "name":"radial",
         "type":"linear",
         "range":{
            "signal":"[0, radius]"
         },
         "zero":true,
         "nice":false,
         "domain":{
            "data":"data",
            "field":"Value"
         },
         "domainMin":0
      },
      {
         "name":"color",
         "type":"ordinal",
         "domain":{
            "data":"data",
            "field":"Province"
         },
         "range":{
            "scheme":"category10"
         }
      }
   ],
   "encode":{
      "enter":{
         "x":{
            "signal":"radius"
         },
         "y":{
            "signal":"radius"
         }
      }
   },
   "marks":[
      {
         "type":"group",
         "name":"categories",
         "zindex":1,
         "from":{
            "facet":{
               "data":"data",
               "name":"facet",
               "groupby":[
                  "Province"
               ]
            }
         },
         "marks":[
            {
               "type":"line",
               "name":"category-line",
               "from":{
                  "data":"facet"
               },
               "encode":{
                  "enter":{
                     "interpolate":{
                        "value":"linear-closed"
                     },
                     "x":{
                        "signal":"scale('radial', datum.Value) * cos(scale('angular', datum.Index))"
                     },
                     "y":{
                        "signal":"scale('radial', datum.Value) * sin(scale('angular', datum.Index))"
                     },
                     "stroke":{
                        "scale":"color",
                        "field":"Province"
                     },
                     "strokeWidth":{
                        "value":1
                     },
                     "fill":{
                        "scale":"color",
                        "field":"Province"
                     },
                     "fillOpacity":{
                        "value":0.1
                     }
                  }
               }
            },
            {
               "type":"symbol",
               "from":{
                  "data":"facet"
               },
               "name":"data-points",
               "encode":{
                  "enter":{
                     "x":{
                        "signal":"scale('radial', datum.Value) * cos(scale('angular', datum.Index))"
                     },
                     "y":{
                        "signal":"scale('radial', datum.Value) * sin(scale('angular', datum.Index))"
                     },
                     "fill":{
                        "scale":"color",
                        "field":"Province"
                     },
                     "size":{
                        "value":20
                     },
                     "stroke":{
                        "value":"black"
                     },
                     "strokeWidth":{
                        "value":1
                     }
                  },
                  "update":{
                     "tooltip":{
                        "signal":"{'Province': datum.Province, 'Index': datum.Index, 'Value': datum.Value}"
                     }
                  }
               }
            }
         ]
      },
      {
         "type":"rule",
         "name":"radial-grid",
         "from":{
            "data":"data"
         },
         "zindex":0,
         "encode":{
            "enter":{
               "x":{
                  "value":0
               },
               "y":{
                  "value":0
               },
               "x2":{
                  "signal":"radius * cos(scale('angular', datum.Index))"
               },
               "y2":{
                  "signal":"radius * sin(scale('angular', datum.Index))"
               },
               "stroke":{
                  "value":"lightgray"
               },
               "strokeWidth":{
                  "value":1
               }
            }
         }
      },
      {
         "type":"text",
         "name":"key-label",
         "from":{
            "data":"data"
         },
         "zindex":1,
         "encode":{
            "enter":{
               "x":{
                  "signal":"(radius + 5) * cos(scale('angular', datum.Index))"
               },
               "y":{
                  "signal":"(radius + 5) * sin(scale('angular', datum.Index))"
               },
               "text":{
                  "field":"Index"
               },
               "align":[
                  {
                     "test":"abs(scale('angular', datum.Index)) > PI / 2",
                     "value":"right"
                  },
                  {
                     "value":"left"
                  }
               ],
               "baseline":[
                  {
                     "test":"scale('angular', datum.Index) > 0",
                     "value":"top"
                  },
                  {
                     "test":"scale('angular', datum.Index) == 0",
                     "value":"middle"
                  },
                  {
                     "value":"bottom"
                  }
               ],
               "fill":{
                  "value":"black"
               },
               "fontWeight":{
                  "value":"bold"
               }
            }
         }
      },
      {
         "type":"line",
         "name":"outer-line",
         "from":{
            "data":"radial-grid"
         },
         "encode":{
            "enter":{
               "interpolate":{
                  "value":"linear-closed"
               },
               "x":{
                  "field":"x2"
               },
               "y":{
                  "field":"y2"
               },
               "stroke":{
                  "value":"lightgray"
               },
               "strokeWidth":{
                  "value":1
               }
            }
         }
      },
      {
         "type":"group",
         "name":"annotation-layer",
         "zindex":2,
         "marks":[
            {
               "type":"text",
               "encode":{
                  "enter":{
                     "x":{
                        "value":-35
                     },
                     "y":{
                        "value":-170
                     },
                     "text":{
                        "value":"CO AQI for all Indonesian province is 5"
                     },
                     "fill":{
                        "value":"blue"
                     },
                     "fontWeight":{
                        "value":"bold"
                     }
                  }
               }
            }
         ]
      }
   ]
}